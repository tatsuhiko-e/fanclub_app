<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>


      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :プロフィール %>
      <%= f.text_field :profile %>

      <%= f.label :年齢 %>
      <%= f.select :age, options_for_select((1..100).to_a), { include_blank: '選択'} %>

      <%= f.label :性別 %>
      <%= f.select :gender, User.genders.keys, {} %>

      <%= f.label :地域 %>
      <%= f.select :area, User.areas.keys, {} %>

      <%= f.label :image %>
      <%= f.file_field :image %>

    

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>
