<h2 class="sgin_up text-center">メールアドレス登録</h2>



<%= form_for(@user, local: true) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

  <div class="form-group text-center field">
    <%= f.label :email, 'メールアドレス', class: "mt-3" %><br>
    <%= f.text_field :email, class: "form-control", id: "exampleInputEmail1", style: "width: 300px;" %>
  </div>

  <div class="form-group text-center field mt-5">
    <%= f.submit "変更を保存", class: "btn btn-large btn-primary" %>
  </div>
<% end %>
