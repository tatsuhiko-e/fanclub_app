
 <% if @user.admin? %> 
  <%= image_tag @user.image.variant(combine_options:{gravity: :center, resize:"1200x600^", crop:"1200x600+0+0"}).processed %>
  <ul class="table-ul pl-0">
    <li class="current">
      <%= link_to "プロフィール", @user, class: "" %>
    </li>
    <li>
      <%= link_to "ブログ", user_posts_path(@user), class: "" %>
    </li>
    <li>
      <%= link_to "スケジュール", event_user_posts_path(@user), class: "" %>
    </li>
    <li>
      <%= link_to "動画", user_videos_path(@user), class: "" %>
    </li> 
    <li>
      <%= link_to "Contact", "/", class: "" %>
    </li> 
  </ul>

	<h1 class="user-name"><%= "ABOUT #{@user.name}" %></h1>
  <div class=""><%= render 'relationships/follow_button', user: @user %></div>
	<p class="profile text-center"><%= @user.profile %></p>


  
  
<!- メンバー一覧 ->

<h2 class="font7">member</h2>  
<% if @user.id == current_user.id %>
    <div class="text-right"><%= link_to "メンバーを追加する", new_user_member_path(@user) %></div>
<% end %>
<div class="member">
    <% @user.members.each do |member| %>
    
      <section class="card1">
      <%= link_to user_member_path(@user, member), class: "" do %>
        <div class="card-title1 text-center"><%= image_tag(member.image.variant(gravity: :center, crop:"640x640+0+0").processed, class: "img-fluid card-img1") %></div>
        <div class="card-content1">
          <h1 class="card-title1"><%= member.name %></h1>
        </div>
      </section>
    <% end %>
    <% end %>
  </div>


<h2 class="font8">近日のイベント</h2>
  <% @events.each do |event| %>
    <section class="card4">
      <%= link_to user_post_path(@user, event.id), class: "" do %>
        <div class=""><%= image_tag(event.image.variant(resize:'1000x300'), class: "img-fluid card-img1") %></div>
        <div>
          <a class="card-title4"><%= event.title %></a><br>
          <a class="card-text4"><%= event.start_time.strftime("%m月%d日") %></a><br>
          <a class="card-text4"><%= event.place %></a>
        </div>
      </section>
    <% end %>
  <% end %>
  <div class="all_look text-right"><%= link_to "もっと見る", event_user_posts_path(@user) %></div>

  <h2 class="font8">最近の投稿</h2>
  <% @posts.each do |post| %>
    <section class="card4">
      <%= link_to user_post_path(@user, post.id), class: "" do %>
        <div class=""><%= image_tag(post.image.variant(resize:'1000x300'), class: "img-fluid card-img1") %></div>
        <div>
          <a class="card-title4"><%= post.title %></a><br>
          <a class="card-text4"><%= post.body.truncate(20) %></a>
        </div>
      </section>
    <% end %>
  <% end %>
  <div class="all_look text-right"><%= link_to "もっと見る", user_posts_path(@user) %></div>


<% else %>
  <div class="text-right"><%= link_to "編集する", edit_user_path %></div>
  <div class="text-center">
    <ul class="list-inline" style="width: 1200px;">
      <li class="list-inline-item">

        <div class="mt-5"><%= image_tag @user.image.variant(combine_options:{gravity: :center, resize:"440x440^", crop:"440x440+0+0"}).processed %></div>
        
        <div class="name-font"><%= @user.name %><div>
      </li>
      <li class="list-inline-item">
        <div class="name-font"><%= "プロフィール#{@user.profile}" %><div>
        <div class="name-font"><%= "年齢#{@user.age}" %><div>
        <div class="name-font"><%= "性別#{@user.gender}" %><div>
        <div class="name-font"><%= "地域#{@user.area}" %><div>
      </li>
    </ul>

  </div>

  <div class="container bg-white">
      <ul class="nav nav-tabs mb-3 nav-justified" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">ファンクラブ</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">お気に入り投稿</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">参加イベント</a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

          <% current_user.followings.reverse_each do |user| %>
              <section class="card">
                <div class="card-img"><%= image_tag(user.image.variant(gravity: :center).processed, class: "img-fluid") %></div>
                <div class="card-content">
                  <h1 class="card-title"><%= user.name %></h1>
                </div>
              </section>
          <% end %>
  
        </div>
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
          <% current_user.like_posts.reverse_each do |post| %>
            <% unless post.event? %>
              <section class="card">
                <div class="card-img"><%= image_tag(post.image.variant(gravity: :center).processed, class: "img-fluid") %></div>
                <div class="card-content">
                  <h1 class="card-title"><%= post.title %></h1>
                  
                </div>
              </section>
            <% end %>
       
          <% end %>
        </div>
        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
          <% current_user.like_posts.reverse_each do |post| %>
            <% if post.event? %>
              <section class="card">
                <div class="card-img"><%= image_tag(post.image.variant(gravity: :center).processed, class: "img-fluid") %></div>
                <div class="card-content">
                  <h1 class="card-title"><%= post.title %></h1>
                  
                </div>
              </section>
            <% end %>
       
          <% end %>
        
        </div>
      </div>
  </div>

<% end %>