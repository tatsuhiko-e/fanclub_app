<%= image_tag @user.image.variant(combine_options:{gravity: :center, resize:"1200x600^", crop:"1200x600+0+0"}).processed %>
  <ul class="table-ul pl-0">
    <li>
      <%= link_to "プロフィール", @user, class: "" %>
    </li>
    <li>
      <%= link_to "ブログ", user_posts_path(@user), class: "" %>
    </li>
    <li>
      <%= link_to "スケジュール", user_events_path(@user), class: "" %>
    </li>
    <li class="current">
      <%= link_to "動画", user_videos_path(@user), class: "" %>
    </li> 
    <li>
      <%= link_to "Contact", "/", class: "" %>
    </li> 
  </ul>

  <% if @user.id == current_user.id %>
    <div class="text-right"><%= link_to "ムービーを追加する", new_user_video_path(@user) %></div>
  <% end %>
  
  <% @user.videos.each do |video| %>
    <div class="">
    <div class=" video-title mt-5"><%= link_to video.title, user_video_path(@user, video) %></div>
    <div class="text-center video-content">
      <iframe width="1000" height="563" src="https://www.youtube.com/embed/<%= video.youtube_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <ul class="video-item">
      <li><%= video.created_at.strftime('%Y/%m/%d') %></li>
      <li class="video-li-right">コメント数</li>
      <li class="ml-3">お気に入り数</li>
    </ul>
    <hr>
  <% end %>