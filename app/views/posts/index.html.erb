<%= image_tag @user.image.variant(combine_options:{gravity: :center, resize:"1200x600^", crop:"1200x600+0+0"}).processed %>
  <ul class="table-ul pl-0">
    <li>
      <%= link_to "プロフィール", @user, class: "" %>
    </li>
    <li class="current">
      <%= link_to "ブログ", user_posts_path(@user), class: "" %>
    </li>
    <li>
      <%= link_to "スケジュール", event_user_posts_path(@user), class: "" %>
    </li>
    <li>
      <%= link_to "動画", user_videos_path(@user), class: "" %>
    </li> 
    <li>
      <%= link_to "Contact", "/", class: "" %>
    </li> 
  </ul>

  <% if @user.id == current_user.id %>
    <div class="text-center mt-3">
      <%= link_to new_user_post_path(@user) do %>
        <i class="fas fa-plus-circle fa-4x plus-icon"></i>
      <% end %>
    </div>
  <% end %>

  <div class="text-right">
    <%= search_form_for @search, url: user_posts_path do |f| %>
      <%= f.search_field :title_or_body_cont, class: 'form-control me-sm-2', id: "submit-form1"%>
      <%= f.button :type => "submit", id: 'submit-btn1' do %>
        <i class='fas fa-search'></i>
      <% end %>
    <% end %>
  </div>
  
<!- post一覧 ->
  
<div class="container" style="">
  <% @results.reverse_each do |post| %>
    <% if post.event? %>
      <section class="card">
        <%= link_to user_post_path(@user, post), class: " text-dark" do %>
        <img class="card-img" src="" alt="">
        <div class="card-content">
          <h1 class="card-title"><%= post.title %></h1>
          <p class="card-text">WebデザインやWebサイト制作、最新のWeb業界情報などを紹介していくサイト。</p>
        </div>
        <% end %>
      </section>
    
    <% else %>
      <section class="card">
        <%= link_to user_post_path(@user, post), class: " text-dark" do %>
        <div class="card-img"><%= image_tag(post.image.variant(gravity: :center).processed, class: "img-fluid") %></div>
        <div class="card-content">
          <h1 class="card-title"><%= post.title %></h1>
          <p class="card-text">WebデザインやWebサイト制作、最新のWeb業界情報などを紹介していくサイト。</p>
        </div>
        <% end %>
      
      </section>
      
    <% end %>
  <% end %>
</div>

