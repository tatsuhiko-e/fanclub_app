<% if @user.id == current_user.id %>
  <%= form_with(model:[@user, @post], method: :post) do |f| %>
    <div class="form-group">
      <%= f.label :title, 'タイトル' %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
    <%= f.label :body, '本文' %>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.file_field :image %><br>
    </div>
    <%= f.submit %>
  <% end %>
<% end %>
