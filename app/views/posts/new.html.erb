<% if @user.id == current_user.id %>
  <%= form_with(model:[@user, @post], method: :post) do |f| %>
    
    <div class="text-center">
      <%= f.file_field :image, class: "text-center", style: "" %>
    </div>

    <div class="form-group text-center">
      <%= f.label :title, 'タイトル' %><br>
      <%= f.text_field :title %>
    </div>

    <div class="text-center">
      <%= f.submit %>
    </div>
  <% end %>
<% end %>

